<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/form_text_color</item>
        <item name="android:textSize">@dimen/primary_font_size</item>
    </style>

    <style name="SecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/form_font_size</item>
    </style>

    <style name="ConfirmStatusText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/confirmTextColor</item>
        <item name="android:textSize">@dimen/primary_font_size</item>
    </style>

    <style name="PrimaryBtn">
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/primaryBtnTextColor</item>
        <item name="android:textSize">@dimen/primary_font_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TitleFont">
        <item name="android:background">#86E3CE</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/box_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="DescFont">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/box_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/asap</item>
    </style>

    <style name="AppFont">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/box_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/bowlby_one_sc</item>
    </style>

</resources>
